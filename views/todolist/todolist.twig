        {% if todolist %}
            <ul>
                {% for todo in todolist if todolist %}
                    <li>{{ todo }} - <a href="api/remove/{{ todo }}" style="font-size: 20px">&#128500;</a></li>
                {% endfor %}
            </ul>
        {% else %}
